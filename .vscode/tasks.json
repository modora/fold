    "version": "2.0.0",
    "tasks": [
        {
            "label": "coverage",
            "type": "shell",
            "command": "python -m coverage run --source=./fold -m unittest discover -s ./tests -p 'test*.py'",
        },
        {
            "label": "coverage html",
            "type": "shell",
            "command": "python -m coverage html",
            "dependsOn": [
                "coverage"
            ]
        },
        {
            "label": "coverage report",
            "type": "shell",
            "command": "python -m coverage report",
            "dependsOn": [
                "coverage"
            ]
        },
        {
            "label": "mypy",
            "type": "shell",
            "command": "python -m mypy -p fold"
        },
    ]
}
